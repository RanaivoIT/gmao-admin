{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Techniciens</h1>
        <a href="{{ path('url_tech') }}" class="d-none d-sm-inline-block btn btn-primary shadow-sm">
            Retour à la liste ...
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header">
            <h4 class="m-0 font-weight-bold text-primary">Nouveau Technicien</h4>
        </div>
        <div class="card-body">
            
            <form action="" method="post">

                <div class="row">
                
                    <div class="form-group col">
                         <label for="Nom">Nom</label>
                        <input type="text" id="nom" name="nom" class="form-control" placeholder="Nom">
                    </div>

                    <div class="form-group col">
                         <label for="prenom">Prénom</label>
                        <input type="text" id="prenom" name="prenom" class="form-control" placeholder="Prénom">
                    </div>

                </div>

                <div class="form-group">
                    <label for="specialite">Spécilaité</label>
                    <input type="text" id="specialite" name="specialite" class="form-control" placeholder="Spécilaité">
                </div>

                <div class="row">
                
                    <div class="form-group col">
                         <label for="adresse">Adresse</label>
                        <input type="text" id="adresse" name="adresse" class="form-control" placeholder="Adresse">
                    </div>

                    <div class="form-group col">
                         <label for="contact">Contact</label>
                        <input type="text" id="contact" name="contact" class="form-control" placeholder="Contact">
                    </div>

                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Username">
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password">
                </div>
        
                <button type="submit" class="btn btn-primary">Enregistrer</button>

            </form>

        </div>
    </div>
{% endblock %}
